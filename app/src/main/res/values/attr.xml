<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RefreshTriangleView">
        <attr name="triangleradios" format="integer" />
        <attr name="circleRadius" format="dimension" />
        <attr name="baseDeepColor" format="color" />
        <attr name="basePaleColor" format="color" />
        <attr name="duration" format="integer" />
    </declare-styleable>
    <declare-styleable name="RefreshGradientView">
        <attr name="initRadius" format="dimension" />
        <attr name="deepColor" format="color" />
        <attr name="paleColor" format="color" />
        <attr name="gradient_duration" format="integer" />
        <attr name="ball_counts" format="integer" />
        <attr name="baseCoefficient" format="float" />
    </declare-styleable>
    <declare-styleable name="RefreshBezierView">
        <attr name="radius" format="dimension" />
        <attr name="leftColor" format="color" />
        <attr name="rightColor" format="color" />
        <attr name="bezier_duration" format="integer" />
        <attr name="bezier_color" format="color" />
    </declare-styleable>
</resources>