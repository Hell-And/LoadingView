<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <loadingwidget.RefreshTriangleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:baseDeepColor="#430283"
        app:basePaleColor="#c287fc"
        app:circleRadius="4dp"
        app:duration="500"
        app:triangleradios="40" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/del_ball"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:text="-"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <loadingwidget.RefreshGradientView
            android:id="@+id/gradientview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            app:ball_counts="6"
            app:baseCoefficient="0.93"
            app:deepColor="@color/red"
            app:initRadius="8dp"
            app:paleColor="@color/lightred" />

        <Button
            android:id="@+id/add_ball"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="+"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

    </LinearLayout>


    <loadingwidget.RefreshBezierView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:bezier_color="#efb005"
        app:leftColor="@color/red"
        app:radius="5dp"
        app:rightColor="@color/colorPrimary" />

    <loadingwidget.RefreshCircleView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        app:circleRadius="2dp"
        app:circle_counts="6" />

</LinearLayout>